<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_google"
        android:layout_width="342dp"
        android:layout_height="58dp"
        android:backgroundTint="#5F95F3"
        android:text="@string/masuk_dengan_google"
        android:onClick="clickGoogle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.637"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.838"
        tools:ignore="OnClick" />

    <Button
        android:id="@+id/btn_masuk"
        android:layout_width="342dp"
        android:layout_height="58dp"
        android:backgroundTint="#C2DFF5"
        android:textColor="#2671BC"
        android:text="@string/masuk_dengan_email"
        android:onClick="clickEmail"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.637"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.947"
        tools:ignore="OnClick" />

</androidx.constraintlayout.widget.ConstraintLayout>